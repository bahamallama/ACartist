<h1>Listing Galleries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.title %></td>
        <td><%= gallery.body %></td>
        <td><%= link_to 'Show', gallery, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_gallery_path(gallery), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gallery', new_gallery_path, class: "btn btn-link" %>
